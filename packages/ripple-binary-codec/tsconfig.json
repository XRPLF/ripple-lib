{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2017"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": false,
    "skipLibCheck": true,
    "declaration": true
  },
  "references": [
    {
      "path": "../ripple-address-codec/tsconfig.json"
    },
    {
      "path": "../xrpl-crypto/tsconfig.json"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ]
}
