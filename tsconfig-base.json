{
  "compilerOptions": {
    "pretty": true,
    "lib": [
      "es2017"
    ],
    "target": "es6",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noEmitOnError": true,

    "strictNullChecks": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strict": true /* Enable all strict type-checking options. */,
    "preserveConstEnums": false,

    "module": "commonjs",
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": false
  }
}
